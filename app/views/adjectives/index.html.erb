<p id="notice"><%= notice %></p>

<h1>Listing Adjectives</h1>

<table>
  <thead>
    <tr>
      <th>Lemma</th>
      <th>Pos</th>
      <th>Lexdomname</th>
      <th>Lexdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adjectives.each do |adjective| %>
      <tr>
        <td><%= adjective.lemma %></td>
        <td><%= adjective.pos %></td>
        <td><%= adjective.lexdomname %></td>
        <td><%= adjective.lexdom %></td>
        <td><%= link_to 'Show', adjective %></td>
        <td><%= link_to 'Edit', edit_adjective_path(adjective) %></td>
        <td><%= link_to 'Destroy', adjective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

